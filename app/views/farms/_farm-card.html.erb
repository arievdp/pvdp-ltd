<div class="p-4 w-1/3 lg:w-full">
  <div class="card card-body h-full px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
    <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3"><%= f.code %></h1>
    <p class="leading-relaxed mb-3"><%= f.nickname %></p>
    <%= link_to 'View farm', farm_path(f), class:"text-teal-400" %>
    <div class="text-center mt-2 leading-none flex justify-center absolute bottom-0 left-0 w-full py-4">
      <span class="text-gray-600 mr-3 inline-flex items-center leading-none text-sm pr-3 py-1 border-r-2 border-gray-300">
        <i class="fad fa-hippo text-xs mr-2"></i>
        <%= f.animals.count %>
      </span>
      <span class="text-gray-600 inline-flex items-center leading-none text-sm">
       <i class="fad fa-users text-xs mr-2"></i>
       <%= f.users.count %>
      </span>
    </div>
  </div>
</div>
