<div class="card col-span-1">

    <div class="card-body h-full flex flex-col justify-between">

        <div>
            <h1 class="text-lg font-bold tracking-wide"><%= @farm.code %></h1>
            <p class="text-gray-600 mt-2">Calving overview</p>
        </div>

        <div class="flex flex-row mt-5 items-end">

          <div class="flex-1">

            <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.heifers.count %></h1>
            <p class="mt-3 mb-4 text-xs text-gray-500">Hiefers on Farm</p>
          </div>

          <div class="flex-1">
            <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.heifers_first.count %></h1>
            <p class="mt-3 mb-4 text-xs text-gray-500"><%= @year_minus_2 %> borns</p>
          </div>

        </div>

        <div class="flex flex-row mt-5 items-end">
          <div class="flex-1">
              <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.heifers_calved.count %></h1>
              <p class="mt-3 mb-4 text-xs text-gray-500">Heifers have calved</p>
          </div>

          <div class="flex-1">
              <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.heifers_first_calved.count %></h1>
              <p class="mt-3 mb-4 text-xs text-gray-500"><%= @year_minus_2 %> borns have calved</p>
          </div>

        </div>

        <div class="flex flex-row mt-5 items-end">

          <div class="flex-1">
              <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.calves_died.count %></h1>
              <p class="mt-3 mb-4 text-xs text-gray-500">Calves have died</p>
          </div>

          <div class="flex-1">
            <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.calves_bobbied.count %></h1>
            <p class="mt-3 mb-4 text-xs text-gray-500">Calves were bobbied</p>
          </div>

        </div>

    </div>

</div>
