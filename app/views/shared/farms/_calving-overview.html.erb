<div class="card col-span-1">

    <div class="card-body h-full flex flex-col justify-between">

        <div>
            <h1 class="text-lg font-bold tracking-wide"><%= @farm.code %></h1>
            <p class="text-gray-600 mt-2">Calving overview</p>
        </div>

        <div class="flex flex-row mt-5 items-end">

          <div class="flex-1">
            <h1 class="font-extrabold text-4xl text-teal-400"><%= @heifers_count %></h1>
            <p class="mt-3 mb-4 text-xs text-gray-500">Hiefers on Farm</p>
          </div>

          <div class="flex-1">
              <h1 class="font-extrabold text-4xl text-teal-400"><%= @animals_calved_count %></h1>
              <p class="mt-3 mb-4 text-xs text-gray-500">Animals have calved</p>
          </div>

        </div>

         <div class="flex flex-row mt-10 items-end">

          <div class="flex-1">
            <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.calves.count %></h1>
            <p class="mt-3 mb-4 text-xs text-gray-500">Calves were reared</p>
          </div>

          <div class="flex-1">
              <h1 class="font-extrabold text-4xl text-teal-400"><%= @farm.calves_dead.count %></h1>
              <p class="mt-3 mb-4 text-xs text-gray-500">Calves have died</p>
          </div>

        </div>

    </div>

</div>
