<div class="card p-0 overflow-hidden col-span-2 lg:col-span-1 flex flex-row lg:flex-col">

    <!-- right -->
    <div class="border-r border-gray-200 w-2/3 lg:w-full lg:mb-5">

        <!-- top -->
        <div class="p-5 flex flex-row flex-wrap justify-between items-center">
            <h2 class="font-bold text-lg"><%= @farm.code %> Calving Summary</h2>
            <div class="flex flex-row justify-center items-center">
                <a href="#" class="btn mr-4 text-sm py-2 block">month</a>
                <a href="#" class="btn-shadow text-sm py-2 block">week</a>
            </div>
        </div>
        <!-- end top -->

        <!-- chart -->
        <div id="SummaryChart"></div>
        <!-- end chart -->

    </div>
    <!-- end right -->

    <!-- left -->
    <div class="w-1/3 lg:w-full">

      <!-- top -->
      <div class="p-5 border-b border-gray-200">
        <h2 class="font-bold text-lg mb-6">Calving Statistics</h2>

        <div class="flex flex-row justify-between mb-3">
            <div class="">
                <h4 class="text-gray-600 font-thin"><%= @year_minus_2 %> born calving rate</h4>
                <p class="text-gray-400 text-xs font-hairline">Percentage of <%= @year_minus_2 %> borns calved</p>
            </div>
            <div class="text-sm font-medium">
              <% if @ftc_perc > 75 %>
                <span class="text-green-400">+</span> <%= @ftc_perc %>%
              <% else %>
                <span class="text-red-400">-</span> <%= @ftc_perc %>%
              <% end %>
            </div>
        </div>

        <div class="flex flex-row justify-between mb-3">
            <div class="">
                <h4 class="text-gray-600 font-thin">Herd Calving Rate</h4>
                <p class="text-gray-400 text-xs font-hairline">Percentage of herd calved</p>
            </div>
            <div class="text-sm font-medium">
              <% if @hcr_perc > 60 %>
                <span class="text-green-400">+</span> <%= @hcr_perc %>%
              <% else %>
                <span class="text-red-400">-</span> <%= @hcr_perc %>%
              <% end %>
            </div>
        </div>

        <div class="flex flex-row justify-between mb-3">
          <div class="">
            <h4 class="text-gray-600 font-thin">Cow Death Rate</h4>
            <p class="text-gray-400 text-xs font-hairline">Percentage of heifers that died</p>
        </div>
          <div class="text-sm font-medium">
            <% if @cow_dr < 2 %>
              <span class="text-green-400">+</span> <%= @cow_dr %>%
            <% else %>
              <span class="text-red-400">-</span> <%= @cow_dr %>%
            <% end %>
          </div>
        </div>

        <div class="flex flex-row justify-between mb-3">
          <div class="">
            <h4 class="text-gray-600 font-thin">Heifer Replacement (HR)</h4>
            <p class="text-gray-400 text-xs font-hairline"><%= @year %> born heifer calves</p>
          </div>
          <div class="text-sm font-medium">
            <% if @hr_perc > 25 %>
              <span class="text-green-400">+</span> <%= @hr_perc %>%
            <% else %>
              <span class="text-red-400">-</span> <%= @hr_perc %>%
            <% end %>
          </div>
        </div>

        <div class="flex flex-row justify-between">
          <div class="">
              <h4 class="text-gray-600 font-thin">Calf Death Rate</h4>
              <p class="text-gray-400 text-xs font-hairline">Percentage of calfs that died in <%= @year %></p>
          </div>
          <div class="text-sm font-medium">
            <% if @calf_dr < 2 %>
              <span class="text-green-400">+</span> <%= @calf_dr %>%
            <% else %>
              <span class="text-red-400">-</span> <%= @calf_dr %>%
            <% end %>
          </div>
        </div>

        </div>
        <!-- end top -->

        <!-- bottom -->
        <div class="p-5">
          <h2 class="font-bold text-lg mb-2">Percentage of Heifers Calved <%= @hcr_perc %>%</h2>
          <strong class="text-teal-400 font-extrabold text-xl"></strong>
          <div class="bg-gray-300 h-2 rounded-full mt-2 relative">
            <% if @hcr_perc < 25 %>
              <div class="rounded-full bg-teal-400 h-full w-1/8 shadow-md"></div>
            <% elsif @hcr_perc < 50 %>
              <div class="rounded-full bg-teal-400 h-full w-1/4 shadow-md"></div>
            <% elsif @hcr_perc < 75 %>
              <div class="rounded-full bg-teal-400 h-full w-1/2 shadow-md"></div>
            <% elsif @hcr_perc < 100 %>
              <div class="rounded-full bg-teal-400 h-full w-full shadow-md"></div>
            <% end %>
          </div>
        </div>
        <!-- end bottom -->

    </div>
    <!-- end left -->

</div>
