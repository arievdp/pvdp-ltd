 <tr> 
    <td class="px-4 py-4 whitespace-no-wrap">
        <div class="text-sm leading-5 text-gray-900"><%= animal.birth_id %></div>
    </td>
    <td class="px-4 py-4 whitespace-no-wrap">
        <div class="text-sm leading-5 text-gray-900"><%= animal.cow_number %></div>
    </td>
    <td class="px-4 py-4 whitespace-no-wrap">
        <div class="text-sm leading-5 text-gray-900"><%= animal.birth_date.year %></div>
    </td>
    <td class="px-4 py-4 whitespace-no-wrap">
        <div class="text-sm leading-5 text-gray-900"><%= animal.calving_date %></div>
    </td>
    <td class="px-4 py-4 whitespace-no-wrap">
        <div class="text-sm leading-5 text-gray-900"><%= animal.status %></div>
    </td>
    <td class="px-4 py-4 whitespace-no-wrap font-medium">
        <%= link_to edit_animal_path(animal) do %>
            <p class="text-indigo-600 hover:text-indigo-900">Edit</p>
        <% end %>
    </td>
</tr>